<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/reply_title"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:hint="点击编辑"
        android:textSize="16sp" />

    <RadioGroup
        android:id="@+id/grab_red_money_result"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone" 
        android:layout_alignParentRight="true"
        >

        <TextView
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:background="@drawable/red_money_has_money" />

        <RadioButton
            android:id="@+id/grab_red_money_is_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="16dp"
            android:layout_height="18dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/red_money_not_money"
            android:gravity="center"
            android:text="空"
            android:textColor="#fffa1105"
            android:textSize="7sp" />

        <RadioButton
            android:id="@+id/grab_red_money_is_ko"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/red_money_reply_delete"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/red_money_reply_delete"
            android:layout_marginLeft="20dp"
            />
    </RadioGroup>

</RelativeLayout>